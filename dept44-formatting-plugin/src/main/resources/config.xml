<configuration>
  <java>
    <excludes>
      <exclude>**/target/**</exclude>
    </excludes>
    <eclipse>
      <file>sundsvall_formatting.xml</file>
    </eclipse>
    <indent>
      <tabs>true</tabs>
      <spacesPerTab>4</spacesPerTab>
    </indent>
  </java>
  <json>
    <excludes>
      <exclude>**/target/**</exclude>
    </excludes>
    <includes>
      <include>src/**/*.json</include>
    </includes>
    <simple/>
    <indent>
      <tabs>true</tabs>
      <spacesPerTab>4</spacesPerTab>
    </indent>
  </json>
  <sql>
    <excludes>
      <exclude>**/target/**</exclude>
    </excludes>
    <includes>
      <include>src/main/resources/**/*.sql</include>
    </includes>
    <excludes>
      <exclude>**/migration/**</exclude>
      <exclude>**/schema.sql</exclude>
    </excludes>
    <dbeaver/>
  </sql>
  <markdown>
    <excludes>
      <exclude>**/target/**</exclude>
    </excludes>
    <includes>
      <include>**/*.md</include>
    </includes>
    <flexmark/>
  </markdown>
  <pom>
    <includes>
      <include>pom.xml</include>
    </includes>
    <sortPom>
      <expandEmptyElements>false</expandEmptyElements>
    </sortPom>
    <indent>
      <tabs>true</tabs>
      <spacesPerTab>4</spacesPerTab>
    </indent>
  </pom>
</configuration>
